# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
tab_width = 2
max_line_length = 120

[*.{json,yaml,yml,sh}]
indent_style = space
indent_size = 2
max_line_length = 300

[*.md]
indent_style = space
indent_size = 2
max_line_length = 200

[*.{tmpl,adoc}]
indent_style = space
indent_size = 2
max_line_length = 200

[Makefile]
indent_style = tab
tab_width = 2
